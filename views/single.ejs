                //document.getElementById("username").innerHTML = "<a href='myPage'>"+username+"</a>";
                console.log(cookie);
                console.log(userImage);
                console.log(username);
            }
            else
                console.log("nada");            
        }

        function getSignin(){
          console.log('getSignin');
